<?xml version="1.0"?>
<launch>

  <arg name="ur_robot" default="ur10e" />

  <include file="$(find artificial_hands_bringup)/launch/inc/load_mia_hand_on_$(arg ur_robot).launch.xml" />

  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find artificial_hands_description)/etc/test_demo.rviz" required="true" />

  <!-- Load robot SRDF to the parameter server -->
  <arg name="moveit_config" value="mia_hand_on_$(arg ur_robot)_moveit_config" />
  <arg name="srdf_path" value="/config/mia_hand_on_$(arg ur_robot).srdf"/>
  <param name="/robot_description_semantic" type="str" textfile="$(eval find(moveit_config)+srdf_path)"/>

</launch>